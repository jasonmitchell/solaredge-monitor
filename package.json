    "remove": "./scripts/remove.sh",
    "start": "npm run build && ./scripts/dev.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonmitchell/solaredge-monitor.git"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "esbuild": "^0.17.18",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "prom-client": "^14.2.0"
  }
}
